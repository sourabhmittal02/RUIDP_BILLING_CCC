            });
        }

        function fillBinderNoByChokdi(selChokdiId) {
            $.ajax({
                type: "GET",
                url: '/Report/GetBinderNoByChokdi',
                data: { ChokdiId: selChokdiId },
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    if (data) {

                        for (var i = 0; i < data.length; i++) {
