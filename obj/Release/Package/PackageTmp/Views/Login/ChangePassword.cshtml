@model ComplaintTracker.Models.ModelUser

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <link href="~/Content/css/select2.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/select2.min.js"></script>
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Change Password</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Jaipur Vidyut Vitran Nigam Limited</li>
    </ol>
    <div class="row mb-3">
        <div class="col-lg-10">

        </div>
    </div>

    <div class="row">
        <div class="card-body">
            @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <main>
                    <div class="container-fluid px-4">

                        @if (@TempData["AlertMessage"] != null)
                        {
                            <div class="alert alert-success">
                                <strong> Success ! </strong> @TempData["AlertMessage"]
                                <div class="float-end">
                                    <button type="button" class="btn-close" data-dismiss="alert">
                                    </button>
                                </div>
                            </div>
                        }

                        <div class="card mb-2">
                            <div class="card-header  bg-warning text-white">
                                <i class="fas fa-table me-1"></i>
                                Change Password
                            </div>
                            <div class="card-body">
                                <div class="row mb-1">
                                    <div class="col-md-3">
                                        <div class="form-floating">
                                            @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                            <label for="inputFirstName">Login Name</label>
                                            @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row mb-1">
                                    <div class="col-md-3">
                                        <div class="form-floating">
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                            <label for="inputFirstName">Password</label>
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row mb-1">
                                    <div class="col-md-3">
                                        <div class="form-floating">
                                            @Html.EditorFor(model => model.Confirm_Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                            <label for="inputFirstName">Confirm Password</label>
                                            @Html.ValidationMessageFor(model => model.Confirm_Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                        <div class="card-body">
                            <div class="row mb-1">
                                <div class="form-floating mb-md-1">
                                    <div class="ml-1 mb-2 align-items-center">
                                        <input type="submit" value="Register User" class="btn btn-success btn-block" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </main>

            }


        </div>
    </div>
